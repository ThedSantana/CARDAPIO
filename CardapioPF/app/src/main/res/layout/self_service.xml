<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/b"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SelfService">

    <TextView
        android:text="@string/self_titulo"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:onClick="SelecionarOpcao"
        android:id="@+id/chk_arroz"
        android:text="@string/arroz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:onClick="SelecionarOpcao"
        android:id="@+id/chk_feijao"
        android:text="@string/feijao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:onClick="SelecionarOpcao"
        android:id="@+id/chk_legume"
        android:text="@string/legume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:onClick="SelecionarOpcao"
        android:id="@+id/chk_salada"
        android:text="@string/salada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:onClick="SelecionarOpcao"
        android:id="@+id/chk_file"
        android:text="@string/file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:onClick="SelecionarOpcao"
        android:id="@+id/chk_bife"
        android:text="@string/bife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:onClick="SelecionarOpcao"
        android:id="@+id/chk_salmao"
        android:text="@string/salmao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_opcao"
        android:text="@string/self_opcao"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/tot_opcao"
        android:text="@string/tot_opcao"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_search_url_text_normal"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/txt_total"
        android:text="@string/txt_total"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/material_blue_grey_800"
        android:layout_height="wrap_content"
        />


    <Button
        android:text="@string/btn_proximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="enviarDados"/>



</LinearLayout>
